{
  "type": "module",
  "scripts": {
    "build:clean": "shx rm -rf \"./site/*\"",
    "build:client": "esbuild --bundle --format=esm client/main.js --outfile=site/bundle.js",
    "build:html": "copyfiles --up 1 \"./html/**/*.{html,css,svg,jpg,png}\" ./site",
    "build": "npm run build:clean && npm run build:client && npm run build:html",
    "watch": "simple-file-watch --run-on-startup --recursive --path=\"html\" --path=\"client\" --command=\"npm run build\"",
    "test": "node --test \"client/**/*_test.js\"",
    "start": "node --watch ./server/server.js"
  },
  "dependencies": {
    "@preact/signals": "^2.3.1",
    "htm": "^3.1.1",
    "preact": "^10.27.1"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "esbuild": "^0.25.9",
    "live-server": "^1.2.2",
    "shx": "^0.4.0",
    "simple-file-watch": "^3.0.0"
  }
}
